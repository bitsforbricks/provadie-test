{
  "compilerOptions": {
    "target": "es6",
    "lib": [],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true
  },
  "include": [
    "*/.ts",
    "*/.tsx",
    "*/.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}